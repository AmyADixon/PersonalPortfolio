<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/CustomCSS/BootstrapOverride.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-bottom navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home/Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/About"> About </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Resume/Index"> Resume </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/IllustrationDesign/Index"> Design and Illustration </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Contact"> Contact </a>
                </li>
            </ul>
        </div>
        <audio controls loop>
            <source src="https://actions.google.com/sounds/v1/water/waves_crashing_on_rock_beach.ogg" type="audio/ogg" />
            <source src="~/AudioFiles/waves.mp3" type="audio/mp3">
        </audio>
    </nav>
    <div class="container body-content">

        <!-- This div will be populated by each return partial view from every controller-->
        <div id="MainInfoDisplayBox">
            @RenderBody()
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - Amysha Dixon</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
