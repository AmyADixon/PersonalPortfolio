@model IEnumerable<PersonalPortfolio.Models.VisitorComments>

<div id="CommentOutput">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CommentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CommentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CommentID })
                </td>
            </tr>
        }
    </table>

    <p>
        @Ajax.ActionLink("Leave a Comment", "Create", "Home", null, new AjaxOptions {UpdateTargetId = "CommentOutput",
                                                                                                                                     InsertionMode = InsertionMode.Replace,
                                                                                                                                     HttpMethod = "GET"}, new {@class = "nav-link"})
    </p>

    <h2> Send a Message </h2>

    <address>
        <strong>Email:</strong>   <a href="https://mail.google.com/mail/?view=cm&fs=1&to=amysha.dixon@gmail.com" target="_blank"> amysha.dixon@gmail.com </a><br />
        <strong>LinkedIn:</strong> <a href="https://www.linkedin.com/in/amyshadixon" target="_blank">AmyshaDixon</a> <br />
        <strong>Telegram:</strong> <a href="https://t.me/AmyshaDixon" target="_blank"> AmyshaDixon </a>
    </address>
</div>

@Scripts.Render("~/bundles/bootstrap") <!-- For dynamic page loading into CommentOutput div above -->
